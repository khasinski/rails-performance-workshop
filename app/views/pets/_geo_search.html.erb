<form method="get" class="form-inline">
  <div class="form-group">
    <div class="form-group">
      <label for="city">Pets within </label>
      <input type="number" class="form-control" id="distance" name="distance" value="<%= @search_form[:distance] %>" placeholder="Distance (km)" min="5" max="100">
      <label> kilometers from </label>
      <select name="distance_from" class="form-control" id="city">
        <option></option>
        <% BIGGEST_CITIES.each do |city| %>
          <option value="<%= city[:name] %>" <% if city[:name] == @search_form[:distance_from] %>selected<% end %>><%= city[:name] %></option>
        <% end %>
      </select>
    </div>
    <div class="form-group">
      <input type="submit" value="Search" class="btn btn-primary">
    </div>
    <%
      random_city = BIGGEST_CITIES.sample[:name]
      random_distance = rand(5..100)
    %>
    <hr />
    <p>Not sure? Perhaps you'd like a pet
      <a href="?distance=<%= random_distance %>&distance_from=<%= random_city %>">
        within <%= random_distance %>km from <%= random_city %>
      </a>
    </p>
  </div>
</form>
